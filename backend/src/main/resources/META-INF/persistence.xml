<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="foodappPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>model.User</class>

        <properties>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/foodappdb"/>
            <property name="jakarta.persistence.jdbc.user" value="fooduser"/>
            <property name="jakarta.persistence.jdbc.password" value="foodpass"/>
            <property name="jakarta.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL8Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="validate"/> <!-- Switch to update if needed -->
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>

      <dependencies> 
        <dependency> 
          <groupId> org.hibernate </groupId> 
          <artifactId>hibernate-core </artifactId> 
          <version> 6.1.2.Final </version> 
        </dependency> 
      </dependencies> 

      
    </persistence-unit>
</persistence>
